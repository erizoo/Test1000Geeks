<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditText.Popup" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:ems">10</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/my_edit_text_border</item>
    </style>

    <style name="AppTheme.Button.Popup" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>
